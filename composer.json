{
    "authors": [
        {
            "name": "Philip Schlender"
        }
    ],
    "autoload": {
        "psr-4": {
            "Extension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "description": "Extension",
    "license": "MIT",
    "minimum-stability": "stable",
    "name": "philipschlender/extension-php",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "philipschlender/cli-php": "^2.0",
        "philipschlender/fs-php": "^4.1",
        "philipschlender/io-php": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "philipschlender/faker-php": "^3.2",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5"
    },
    "scripts": {
        "extension": [
            "@php ./src/script.php"
        ],
        "php-cs-fixer": [
            "./vendor/bin/php-cs-fixer fix"
        ],
        "phpstan": [
            "./vendor/bin/phpstan"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "phpunit-coverage": [
            "./vendor/bin/phpunit --coverage-text"
        ],
        "phpunit-coverage-html": [
            "./vendor/bin/phpunit --coverage-html coverage"
        ],
        "qa": [
            "@php-cs-fixer",
            "@phpstan",
            "@phpunit"
        ]
    },
    "type": "library"
}
